<?xml version='1.0' encoding='utf-8'?>
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/faculty_review</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password">2003</property>
  <property name="show_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">update</property>

  <!-- Mapping classes -->
  <mapping class="com.gqt.model.Student"/>
  <mapping class="com.gqt.model.Faculty"/>
  <mapping class="com.gqt.model.Review"/>
  <mapping class="com.gqt.model.Question"/>
  <mapping class="com.gqt.model.Admin"/>
  
  
 </session-factory>
</hibernate-configuration>
